<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1>Cart</h1>
        <% if (products.length > 0) { %>
            <div class="cart_block">
                <ul>
                    <% products.forEach(p => { %>
                        <li>
                            <p><strong>Title:</strong> <%= p.productId.title %></p>
                            <p><strong>Quantity:</strong> <%= p.quantity %></p>
                            <p><strong>Price:</strong> <%= p.quantity * p.productId.price %></p>
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                <button class="button red" type="submit">Delete</button>
                            </form>
                        </li>
                    <% }); %>
                </ul>
                <div class="order_form_block">
                    <form action="/create-order" method="POST">
                        <button class="button orange" type="submit">Order now!</button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <h2>Cart is empty!</h2>
        <% } %>    
    </main>
<%- include('../includes/end.ejs') %>