<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1>Welcom to the shop!</h1>
        <% if (prods.length > 0) { %>
            <div class="book_shop">
                <% for (product of prods) { %>
                    <article>
                        <header>
                            <h1><%= product.title %></h1>
                        </header>
                        <div>
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                        </div>
                        <div>
                            <h2>$<%= product.price %></h2>
                            <p><%= product.description %></p>
                        </div>
                        <div>
                            <a href="/products/<%= product.id %>">Details</a>
                            <%- include('../includes/add-to-cart') %>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h2>No products!</h2>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>